{
  "name": "vscode-fastly-vcl",
  "displayName": "Fastly Varnish Configuration Language (VCL)",
  "description": "Fastly Varnish Configuration Language (VCL) language support for Visual Studio Code",
  "publisher": "fastly",
  "homepage": "https://github.com/fastly/vscode-fastly-vcl",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/fastly/vscode-fastly-vcl.git"
  },
  "version": "2.0.3",
  "engines": {
    "vscode": "^1.82.0",
    "node": ">=22"
  },
  "activationEvents": [],
  "main": "./client/out/extension",
  "workspaces": [
    "./client",
    "./server"
  ],
  "scripts": {
    "build": "tsc -b ./client && tsc -b ./server",
    "clean": "rm -rf client/out server/out",
    "dev": "tsc -b -w ./client ./server",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint ./client/src --ext .ts,.tsx",
    "package": "vsce package",
    "prebuild": "npm run clean",
    "prepackage": "npm run build && npm run lint",
    "pretest:e2e": "npm run build",
    "publish": "vsce package",
    "test:colorization": "node ./test/runTest.mjs",
    "test:e2e": "sh ./scripts/e2e.sh",
    "test:e2e:coverage": "c8 sh ./scripts/e2e.sh",
    "test": "npm run test:colorization && npm run test:e2e",
    "vscode:prepublish": "npm run build && npm run lint && npm run test"
  },
  "categories": [
    "Programming Languages",
    "Language Packs"
  ],
  "contributes": {
    "languages": [
      {
        "id": "vcl",
        "aliases": [
          "Fastly VCL",
          "vcl"
        ],
        "extensions": [
          ".vcl",
          ".VCL"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "vcl",
        "scopeName": "source.vcl",
        "path": "./syntaxes/vcl.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Fastly VCL",
      "properties": {
        "fastly.vcl.lintingEnabled": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Experimental: Enable linting."
        },
        "fastly.vcl.maxLintingIssues": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Specifies the maximum number of linting issues that the server will return."
        }
      }
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.82.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "c8": "^10.1.3",
    "eslint": "^9.39.2",
    "mocha": "^11.7.5",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  },
  "dependencies": {
    "falco-js": "^0.23.2",
    "vscode-jsonrpc": "^8.2.1",
    "vscode-languageserver": "^9.0.0",
    "vscode-languageserver-textdocument": "^1.0.8"
  },
  "c8": {
    "include": [
      "client/out/**/*.js",
      "server/out/**/*.js"
    ],
    "exclude": [
      "client/out/test/**"
    ],
    "reporter": [
      "text",
      "lcov",
      "html"
    ],
    "report-dir": "coverage"
  }
}
